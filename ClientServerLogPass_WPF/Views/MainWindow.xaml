<Window x:Class="ClientServerLogPass_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientServerLogPass_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="380" Width="350" WindowStyle="None" ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary Source="/Styles/StyleTemplates.xaml"/>
    </Window.Resources>

    <Grid MouseDown="Grid_MouseDown">
        <Border Style="{StaticResource MainBorder}">
            <Grid Style="{StaticResource MainGrid}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" x:Name="Header">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Style="{StaticResource WindowName}" Text="Окно Авторизации"/>
                    <TextBlock Grid.Row="1" Style="{StaticResource WindowName}" Text="{Binding Status}"/>
                    <Button Grid.Column="2" x:Name="MinimizeWindow" Style="{StaticResource minimiseButton}" Click="MinimiseWindow"/>
                    <Button Grid.Column="3" x:Name="btnCloseWindow" Style="{StaticResource closeButton}" Click="CloseWindow"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="1" Text="Login" Style="{StaticResource WindowName}" Margin="40 0 0 0 "/>
                        <TextBox Grid.Row="2" Style="{StaticResource LoginTextBox}"/>
                        <TextBlock Grid.Row="3" Text="{Binding LoginCheck}" Style="{StaticResource WindowName}" Margin="40 0 0 0 "/>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="1" Text="Password" Style="{StaticResource WindowName}" Margin="40 0 0 0 "/>
                        <PasswordBox Grid.Row="2" Style="{StaticResource PasswordBox}"/>
                        <TextBlock Grid.Row="3" Text="{Binding PasswordCheck}" Style="{StaticResource WindowName}" Margin="40 0 0 0 "/>
                    </Grid>

                    <Button Grid.Row="2" Content="Вперед!" Style="{StaticResource OperationButton}"/>
                </Grid>
            </Grid>
        </Border>

    </Grid>
</Window>
